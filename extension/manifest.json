{
  "manifest_version": 3,
  "name": "Zero Knowledge Vault",
  "version": "0.1.0",
  "description": "A simple zero knowledge vault that keeps encryption on the client and syncs ciphertext to a Node.js backend.",
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "permissions": ["storage", "tabs", "activeTab"],
  "host_permissions": [
    "http://localhost:4000/*",
    "https://*/*",
    "http://*/*"
  ],
  "web_accessible_resources": [
    {
      "resources": ["scripts/popup.js", "scripts/crypto.js"],
      "matches": ["<all_urls>"]
    }
  ],
  "content_scripts": [
    {
      "matches": ["https://*/*", "http://*/*"],
      "js": ["scripts/content.js"],
      "run_at": "document_idle"
    }
  ]
}
